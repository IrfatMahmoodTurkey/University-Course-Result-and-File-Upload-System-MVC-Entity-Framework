@using Microsoft.AspNet.Identity
@model UniversityManagementSystemVersion2.Models.ManageUserViewModel


<div class="form-body">
    <p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>

    @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        @Html.LabelFor(m => m.OldPassword, "Old Password")
        <br />
        @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Enter Old Password", @class="password-textbox" })
        <br />

        @Html.LabelFor(m => m.NewPassword, "New Password")
        <br />
        @Html.PasswordFor(m => m.NewPassword, new { placeholder = "Enter New Password", @class="password-textbox"})
        <br />

        @Html.LabelFor(m => m.ConfirmPassword, "Confirm New Password")
        <br />
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm New Password", @class = "password-textbox" })
        <br />


        <input type="submit" value="Change password" />

    }
</div>
