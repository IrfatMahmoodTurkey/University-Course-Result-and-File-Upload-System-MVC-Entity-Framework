@model UniversityManagementSystemVersion2.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}


<title>@ViewBag.Title - University Course And Result System</title>
<link rel="icon" href="~/favicon.ico" />

<link href="~/design-all/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/design-all/css/sb-admin.min.css" rel="stylesheet" />
<link href="~/design-all/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

<style>
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    }

    .head {
        margin: 0;
        padding-top: 20px;
        padding-bottom: 20px;
        padding-left: 5px;
        text-align: center;
        background-color: #004D40;
        color: white;
    }


    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    input[type=submit] {
        background-color: #004D40;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        input[type=submit]:hover {
            opacity: 0.8;
        }


    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
    }

    img.avatar {
        width: 40%;
        border-radius: 50%;
    }

    .container {
        padding: 16px;
    }

    span.psw {
        float: right;
        padding-top: 16px;
    }

    .form-body {
        width: 50%;
        padding: 20px;
        margin-left: auto;
        margin-right: auto;
        border-radius: 5%;
        background-color: #F5F5F5;
    }

    .error-message {
        color: red;
    }
</style>

<body>

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top" style="background-color: #004D40 !important;">
        <a class="navbar-brand mr-1" href="@Url.Action("Login", "Account")">University Course & Result System</a>
    </nav>
    <br />

    <div class="form-body">

        <h4 style="text-align: left"><i class="fas fa-user-circle"></i><span style="display:inline-block; width: 10px;"></span>Log In</h4>
        <div style="text-align: center;">
            <img src="~/background/avater.jpg" style="border-radius: 50%" height="150px" width="150px" />
        </div>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.LabelFor(m => m.UserName, "REG NO")
            <br />
            @Html.TextBoxFor(m => m.UserName, null, new { placeholder = "Enter Your Registration Number" })
            <br />
            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "error-message" })
            <br />

            @Html.LabelFor(m => m.Password, "Password")
            <br />
            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Your Password" })
            <br />
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "error-message" })
            <br />

            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <input type="submit" value="Log in" class="btn btn-default" />
        }
    </div>

    <hr />
    <br />
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
    <footer class="card-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © IrfatMahmoodTurkey - @DateTime.Now.Year</span>
            </div>
        </div>
    </footer>
</body>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>