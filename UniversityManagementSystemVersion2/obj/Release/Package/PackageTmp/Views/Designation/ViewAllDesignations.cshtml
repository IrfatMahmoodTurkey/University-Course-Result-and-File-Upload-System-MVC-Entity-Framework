@using UniversityManagementSystemVersion2.Models

@{
    ViewBag.Title = "All Designations";
    ViewBag.ViewAllDesignationActive = "active";
    Layout = "~/Views/Shared/Admin_Master_Page.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <i class="fas fa-table"></i>
        <a href="@Url.Action("AdminIndex", "Home")">Admin</a>
    </li>
    <li class="breadcrumb-item active">All Designations</li>
</ol>

<h3>View All Designations</h3>
<p>View all saved Designations</p>
<hr />

<table class="table table-striped">
    <thead style="background-color: #004D40 !important; color: white">
        <tr>
            <td>SL</td>
            <td>Designation</td>
            <td>Action By</td>
            <td>Action Done</td>
            <td>Action Time</td>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;

            foreach (Designation designation in ViewBag.Designations)
            {
                count++;

                <tr>
                    <td>@count</td>
                    <td>@designation.DesignationName</td>
                    <td>@designation.ActionBy</td>
                    <td>@designation.ActionDone</td>
                    <td>@designation.ActionTime</td>
                </tr>
            }
        }
    </tbody>
</table>

