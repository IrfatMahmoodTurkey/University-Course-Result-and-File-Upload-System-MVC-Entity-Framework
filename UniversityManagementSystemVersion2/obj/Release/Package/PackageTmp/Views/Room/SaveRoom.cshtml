@model UniversityManagementSystemVersion2.Models.Room

@{
    ViewBag.Title = "Save Room";
    ViewBag.SaveRoomActive = "active";
    Layout = "~/Views/Shared/Admin_Master_Page.cshtml";
}

<style>
    .error-message {
        color: red;
    }
</style>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <i class="fas fa-door-open"></i>
        <a href="@Url.Action("AdminIndex", "Home")">Admin</a>
    </li>
    <li class="breadcrumb-item active">New Room</li>
</ol>

<h3>Save Room</h3>
<p>Save new Room on server</p>
<hr />

<div class="form-body">
    @using (Html.BeginForm())
    {
        if (ViewBag.Response == 1)
        {
            <div class="alert alert-success alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Success!</strong> Room No Saved Successfully.
            </div>
        }
        else if (ViewBag.Response == 0)
        {
            <div class="alert alert-danger alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Failed!</strong> Failed to Save Room No.
            </div>
        }
        else if (ViewBag.Response == 2)
        {
            <div class="alert alert-danger alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Exists!</strong> Room No already Exists.
            </div>
        }
        else if (ViewBag.Response == 4)
        {
            <div class="alert alert-danger alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Failed!</strong> Fill Up all fields correctly.
            </div>
        }

        @Html.LabelFor(l => l.RoomNo, "Room")
        <br />
        @Html.TextBoxFor(t => t.RoomNo, null, new { placeholder = "Enter Room No" })
        <br />
        @Html.ValidationMessageFor(v => v.RoomNo, null, new { @class = "error-message" })
        <br />

        <input type="submit" value="Save" />
        <br />
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

